{
  "name": "read-later",
  "version": "0.0.1",
  "description": "a chrome extension .",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --config webpack.prod.js",
    "dev": "webpack --config webpack.dev.js --watch --display-modules --sort-modules-by size",
    "csscomb": "csscomb ./src/style.scss",
    "format:js": "eslint --fix --color ./src",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn run format:js -- ",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itcat99/read-later.git"
  },
  "keywords": [
    "chrome",
    "extension",
    "readlater"
  ],
  "author": "FreMaNgo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/itcat99/read-later/issues"
  },
  "homepage": "https://github.com/itcat99/read-later#readme",
  "dependencies": {
    "classnames": "^2.2.6",
    "csscomb": "^4.2.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "styled-components": "^3.3.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-minify": "^0.4.3",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^1.0.0",
    "eslint": "^5.2.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.2",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "prettier": "1.13.7",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "svg-url-loader": "^2.3.1",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.16.4",
    "webpack-cli": "^3.1.0"
  }
