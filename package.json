{
  "name": "read-later",
  "version": "0.3.7",
  "description": "a chrome extension .",
  "main": "index.js",
  "scripts": {
    "prebuild": "rm -rf ./dist/assets/",
    "build": "webpack --config webpack.prod.js",
    "build:info": "GET_INFO=true webpack --config webpack.prod.js",
    "dev": "webpack --config webpack.dev.js --watch --display-modules --sort-modules-by size",
    "csscomb": "csscomb ./src/style.scss",
    "format:js": "eslint --fix --color ./src",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn format:js",
      "git add ."
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itcat99/read-later.git"
  },
  "keywords": [
    "chrome",
    "extension",
    "readlater"
  ],
  "author": "FreMaNgo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/itcat99/read-later/issues"
  },
  "homepage": "https://github.com/itcat99/read-later#readme",
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "classnames": "^2.2.6",
    "csscomb": "^4.2.0",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-saga": "^0.16.0",
    "styled-components": "^3.4.9"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.2",
    "babel-preset-minify": "^0.5.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.6.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.2",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "prettier": "^1.14.3",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "svg-url-loader": "^2.3.1",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.20.2",
    "webpack-bundle-analyzer": "^3.0.2",
    "webpack-cli": "^3.1.1"
  }
}
